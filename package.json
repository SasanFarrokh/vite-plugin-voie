    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  }
}
